<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add project</h1>
        <%= form_for @item do |f| %>
        
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image%>
          </div>

          <div class="form-group">
            <%= f.label :product_name %>
            <%= f.text_area :product_name, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :product_price %>
            <%= f.number_field :product_price, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :info %>
            <%= f.text_area :info, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          
          

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>