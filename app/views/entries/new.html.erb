<div>
  <%= form_for @entry do |f| %>
  
  
   <div class="form-group">
      <%= f.label :name, class: 'text-white' %>
      <%= f.text_field :name, class: 'form-control' %>
   </div>
  
   <div class="form-group">
      <%= f.label :message, class: 'text-white' %>
      <%= f.text_field :message, class: 'form-control' %>
   </div>
  
    <%= f.submit '送信' %>
  
  <% end %>
</div>
